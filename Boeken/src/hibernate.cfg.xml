<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/derde</property>
    <property name="hibernate.connection.username">derde</property>
    <property name="hibernate.connection.password">derde</property>
    <property name="hibernate.hbm2ddl.auto">create</property>
    <mapping class="data.Adres"/>
    <mapping class="data.Auteur"/>
    <mapping class="data.Boek"/>
    <mapping class="data.Klant"/>
    <mapping class="data.Persoon"/>
    <mapping class="data.Uitgeverij"/>
    <mapping class="data.Voorkeur"/>
  </session-factory>
</hibernate-configuration>
